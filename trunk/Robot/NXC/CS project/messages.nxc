#define OUTBOX 0
#define INBOX 1

task main()
{
 ClearScreen();
 TextOut(15,LCD_LINE4,"waiting for");
 TextOut(10,LCD_LINE5,"first message");
 
 string msg ="";
 string id = NumToStr(INBOX);
 string ty = StrCat(id,": Thank you for the string");
 
 while(1)
 {
  ReceiveMessage(INBOX,true,msg);
  
  if(StrLen(msg)>0)
  {
   ClearScreen();
   TextOut(0,LCD_LINE1,msg);
   msg="";
   SendMessage(OUTBOX,ty);
  }
 }
}
