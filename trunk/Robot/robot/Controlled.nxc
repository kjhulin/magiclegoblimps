task cmdPan()
{
 string msg;

 FOREVER
 {
  ReceiveMessage(CAMBOX,false,msg);

  if( StrLen(msg)>0 && testCommand(msg,"pan") )
  {
   ReceiveMessage(CAMBOX,true,msg);

   msg = SubStr( msg, 4, StrLen(msg) );

   pan( StrToNum( msg ) ); // send deg
  }
  /*
  else if( testCommand(msg,"pid") )
